{
  "name": "promptty",
  "version": "0.3.0",
  "description": "Slack/Teams to Claude Code bridge with response filtering and cross-channel messaging",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "promptty": "./src/cli/index.ts"
  },
  "scripts": {
    "start": "bun run src/cli/index.ts serve",
    "dev": "bun --watch src/cli/index.ts serve",
    "build": "bun build src/cli/index.ts --outdir dist --target bun",
    "typecheck": "tsc --noEmit",
    "check-setup": "./scripts/check-setup.sh",
    "install-plugin": "./scripts/install-plugin.sh"
  },
  "dependencies": {
    "@opentui/core": "^0.1.69",
    "@opentui/react": "^0.1.69",
    "@slack/bolt": "^4.1.0",
    "botbuilder": "^4.23.1",
    "botframework-connector": "^4.23.1",
    "commander": "^12.0.0",
    "react": "^19.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.0.0",
    "typescript": "^5.7.2"
  }
}
