{
  "name": "promptty",
  "version": "0.2.0",
  "description": "Slack/Teams to Claude Code bridge with response filtering and cross-channel messaging",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "typecheck": "tsc --noEmit",
    "check-setup": "./scripts/check-setup.sh",
    "install-plugin": "./scripts/install-plugin.sh"
  },
  "dependencies": {
    "@slack/bolt": "^4.1.0",
    "botbuilder": "^4.23.1",
    "botframework-connector": "^4.23.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.2"
  }
}
